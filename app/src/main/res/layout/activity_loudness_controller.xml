<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".activity.LoudnessControllerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_twotone_chevron_right_24dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Main Display Card (APO Loudness Style) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/main_display_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#000000"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <!-- Real dB SPL with color indicator -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/real_db_spl_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70.0 dB"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#00ff00" />

                    <!-- Safe time display -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/safe_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safe: 24h+"
                        android:textSize="16sp"
                        android:textColor="#00ff00"
                        android:layout_marginTop="4dp" />

                    <!-- Technical parameters in small text -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/technical_params_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T70 R80 O+0.0 P:-14"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:layout_marginTop="8dp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Real Volume Slider -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Phon"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/real_volume_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="40"
                    android:valueTo="90"
                    android:value="70"
                    android:stepSize="0.1"
                    app:labelBehavior="gone" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/real_volume_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70.0"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="8dp"
                    android:minWidth="48dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Reference Slider -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference Phon"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/reference_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="75"
                    android:valueTo="90"
                    android:value="80"
                    android:stepSize="1"
                    app:labelBehavior="gone" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/reference_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="8dp"
                    android:minWidth="48dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- RMS Offset Slider -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music RMS Offset"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <com.google.android.material.slider.Slider
                    android:id="@+id/rms_offset_slider"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="14"
                    android:stepSize="1"
                    android:value="10" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rms_offset_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-10 dB"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginStart="8dp"
                    android:minWidth="60dp"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Auto Reference Mode Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/auto_reference_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Reference Mode"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />
                
            <!-- FIR Compensation Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/fir_compensation_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIR Compensation"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:layout_marginBottom="16dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:checked="true" />

            <!-- System Calibration Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Calibration"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-step calibration for accurate SPL readings"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp" />

                    <!-- Calibration Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status: "
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/calibration_status_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not calibrated"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorError" />

                    </LinearLayout>

                    <!-- Step Progress -->
                    <LinearLayout
                        android:id="@+id/calibration_progress_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/calibration_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            app:trackThickness="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/calibration_step_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 1 of 2: Max SPL Measurement"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorPrimary" />

                    </LinearLayout>

                    <!-- Main Calibration Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/start_calibration_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Calibration"
                        app:icon="@drawable/ic_baseline_equalizer_24dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Calibration Input (shown during calibration) -->
                    <LinearLayout
                        android:id="@+id/calibration_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/calibration_instruction_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Measure the SPL with your meter:"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/measured_spl_input_layout"
                                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                app:suffixText="dB">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/measured_spl_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:textAlignment="center" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/save_measurement_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:layout_marginStart="8dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Pink Noise Control (shown during calibration) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/pink_noise_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Play Pink Noise (0 dB)"
                        app:icon="@drawable/ic_baseline_play_arrow_24dp"
                        android:visibility="gone"
                        android:layout_marginBottom="16dp" />

                    <!-- Additional Controls -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/reset_calibration_button"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reset"
                            app:icon="@drawable/ic_baseline_refresh_24dp"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cancel_calibration_button"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cancel"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Profile Management -->
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Management"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_profile_button"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Save"
                            app:icon="@drawable/ic_twotone_save_24dp"
                            android:layout_marginEnd="8dp" />
                            
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/load_profile_button"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Load"
                            app:icon="@drawable/ic_twotone_folder_special_24dp" />
                    </LinearLayout>

                    <!-- Hidden buttons for compatibility -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/prepare_max_spl_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                            
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_max_spl_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/prepare_80db_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                            
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_80db_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/prepare_75db_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                            
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/save_75db_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/calibrate_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Calculation Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculation Details"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/calculation_details_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textAppearance="?attr/textAppearanceCaption"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Safety Level Legend -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Levels"
                        android:textAppearance="?attr/textAppearanceBodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp" />

                    <!-- Safety levels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="#00ff00"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≤65 dB: Very Safe (24h+)"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="#ffff66"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65-73 dB: Safe"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="#ff9999"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="73-80 dB: Caution"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="#ff66ff"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80-85 dB: Warning"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="#ff3333"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="≥85 dB: Danger"
                            android:textAppearance="?attr/textAppearanceCaption"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>